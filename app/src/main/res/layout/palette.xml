<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_activity_bg">

    <Button
        android:id="@+id/b_open_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:text="@string/open"
        android:textColor="@color/main_activity_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/b_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:text="@string/camera"
        android:textColor="@color/main_activity_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="368dp"
        android:layout_height="230dp"
        android:layout_weight="1"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="8dp"
        app:srcCompat="@drawable/checker_background"
        app:layout_constraintTop_toBottomOf="@+id/b_open_image"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_vibrant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_image"
        app:layout_constraintLeft_toLeftOf="parent" />

    <View
        android:id="@+id/v_vibrant"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteY="340dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_vibrant" />

    <Button
        android:id="@+id/b_palette_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:text="@string/button_hsv_cancel"
        android:textColor="@color/main_activity_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/b_palette_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:text="@string/button_hsv_ok"
        android:textColor="@color/main_activity_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>